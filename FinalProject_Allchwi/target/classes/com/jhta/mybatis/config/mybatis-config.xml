<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.jhta.allchwi.vo.admin.BigCategoryVO" alias="big_category"/>
		<typeAlias type="com.jhta.allchwi.vo.admin.SmallCategoryVO" alias="small_category"/>
		<!-- Login 관련 Mapper vo alias -->
		<typeAlias type="com.jhta.allchwi.vo.login.MemberLoginVO" alias="mlv"/>		
		<typeAlias type="com.jhta.allchwi.vo.login.MemberInfoVO" alias="miv"/>
		<!-- point 관련 Mapper vo alias -->	
		<typeAlias type="com.jhta.allchwi.vo.point.PointVO" alias="pv"/>		
		<!-- 이미지 파일 관련 Mapper vo alias -->
		<typeAlias type="com.jhta.allchwi.vo.profileImg.ProfileImgVO" alias="piv"/>
		<!-- 자격증테이블 alias -->
		<typeAlias type="com.jhta.allchwi.vo.classopen.CertificateVO" alias="cert"/>		
		<!-- classApply : 수업신청서 테이블 alias -->		
		<typeAlias type="com.jhta.allchwi.vo.classapply.ClassApplyVO" alias="classapply"/>
		<!-- ClassInfo 테이블 alias -->		
		<typeAlias type="com.jhta.allchwi.vo.classopen.ClassInfoVO" alias="classInfo"/>	
		<!-- 커버이비지 테이블 alias -->	
		<typeAlias type="com.jhta.allchwi.vo.classopen.ClassImgVO" alias="classImg"/>
		<!-- 수업 Curriculum 테이블 alias -->	
		<typeAlias type="com.jhta.allchwi.vo.classopen.CurriculumVO" alias="classCurri"/>			
		<!-- big_location 테이블 alias -->	
		<typeAlias type="com.jhta.allchwi.vo.location.BigLocationVO" alias="bloc"/>	
		<!-- small_location 테이블 alias -->	
		<typeAlias type="com.jhta.allchwi.vo.location.SmallLocationVO" alias="sloc"/>	
		
	</typeAliases>

	<mappers>
		<!-- admin관련 Mapper -->
		<mapper resource="com/jhta/mybatis/mapper/CategoryMapper.xml"/>
		<mapper resource="com/jhta/mybatis/mapper/AdminManageClassMapper.xml"/>
		<mapper resource="com/jhta/mybatis/mapper/AdminMemberListMapper.xml"/>
		
		
		<!-- Login관련 Mapper 경로 -->
		<mapper resource="com/jhta/mybatis/mapper/MemberLoginMapper.xml"/>
		<mapper resource="com/jhta/mybatis/mapper/MemberInfoMapper.xml"/>
		<!-- Point관련 Mapper 경로 -->
		<mapper resource="com/jhta/mybatis/mapper/PointMapper.xml"/>			
		<!-- ProfileImg관련 Mapper 경로 -->
		<mapper resource="com/jhta/mybatis/mapper/ProfileImgMapper.xml"/>
		
		<!-- Class등록 Mapper -->
		<mapper resource="com/jhta/mybatis/mapper/CertificateMapper.xml"/>
		<mapper resource="com/jhta/mybatis/mapper/ClassInfoMapper.xml"/>
		<mapper resource="com/jhta/mybatis/mapper/ClassImgMapper.xml"/>
		
		<!-- Class Apply Mapper -->
		<mapper resource="com/jhta/mybatis/mapper/ClassApplyMapper.xml"/>
		
		<!-- Location 등록 -->
		<mapper resource="com/jhta/mybatis/mapper/BigLocationMapper.xml"/>
		<mapper resource="com/jhta/mybatis/mapper/SmallLocationMapper.xml"/>
		
		<!-- Curriculum mapper -->
		<mapper resource="com/jhta/mybatis/mapper/CuriiculumMapper.xml"/>
		
	</mappers>
</configuration>










